<div class="flex flex-row items-center gap-4">
  <p class="uppercase font-semibold text-xs text-gray-0" style="writing-mode: vertical-lr">
    Shipyard
  </p>
  <div class="flex flex-col gap-2">
    <div class="flex flex-row gap-2">
      <%= render ShipComponent.new(type: :battleship, direction: :horizontal).with_variant(:battleship) %>
      <%= render ShipComponent.new(type: :submarine, direction: :horizontal).with_variant(:submarine) %>
      <%= render ShipComponent.new(type: :cruiser, direction: :horizontal).with_variant(:cruiser) %>
    </div>
    <div class="flex flex-row gap-2">
      <%= render ShipComponent.new(type: :aircraft_carrier, direction: :horizontal).with_variant(:aircraft_carrier) %>
      <%= render ShipComponent.new(type: :destroyer, direction: :horizontal).with_variant(:destroyer) %>
    </div>
  </div>
</div>
