<div class="mb-12 flex flex-row items-center gap-4">
  <p class="uppercase font-semibold text-xs text-gray-0 -rotate-90">Shipyard</p>
  <div class="flex flex-col gap-2">
    <div class="flex flex-row gap-2">
      <%= render BattleshipComponent.new(direction: :horizontal) %>
      <%= render SubmarineComponent.new(direction: :horizontal) %>
      <%= render CruiserComponent.new(direction: :horizontal) %>
    </div>
    <div class="flex flex-row gap-2">
      <%= render AircraftCarrierComponent.new(direction: :horizontal) %>
      <%= render DestroyerComponent.new(direction: :horizontal) %>
    </div>
  </div>
</div>
