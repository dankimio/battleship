<div class="max-w-2xl mx-auto py-8">
  <h1 class="text-5xl font-bold mb-8">Ships</h1>

  <%= render 'navigation' %>

  <h2 class="text-3xl font-semibold mb-8">Ships / atom</h2>

  <div class="grid gap-y-10 gap-x-12 mb-12" style="grid-template-columns: 150px 50px 50px 50px">
    <p></p>
    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-center">Default</p>
    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-center">Hover</p>
    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-center">Hit</p>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Front default</p>
    <div class="atom front-default mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom front-default hover mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom front-default atom-hit mx-auto">
      <div class="hit"></div>
    </div>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Front Aircraft carrier</p>
    <div class="atom front-aircraft-carrier mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom front-aircraft-carrier hover mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom front-aircraft-carrier atom-hit mx-auto">
      <div class="hit"></div>
    </div>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Front Submarine</p>
    <div class="atom front-submarine mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom front-submarine hover mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom front-submarine atom-hit mx-auto">
      <div class="hit"></div>
    </div>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Middle</p>
    <div class="atom middle mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom middle hover mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom middle atom-hit mx-auto">
      <div class="hit"></div>
    </div>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Back aircraft carrier</p>
    <div class="atom back-aircraft-carrier mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom back-aircraft-carrier hover mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom back-aircraft-carrier atom-hit mx-auto">
      <div class="hit"></div>
    </div>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Back default</p>
    <div class="atom back-default mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom back-default hover mx-auto">
      <div class="hit"></div>
    </div>
    <div class="atom back-default atom-hit mx-auto">
      <div class="hit"></div>
    </div>
  </div>


  <h2 class="text-3xl font-semibold mb-8">Ships / components</h2>

  <div class="grid gap-y-10 gap-x-12" style="grid-template-columns: 125px 50px 50px">
    <p></p>
    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-center">Default</p>
    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-center">Silhouette</p>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Cruiser (2)</p>

    <div class="ship ship-vertical items-center">
      <div class="atom front-default">
        <div class="hit"></div>
      </div>
      <div class="atom back-default">
        <div class="hit"></div>
      </div>
    </div>

    <div class="ship ship-vertical items-center">
      <div class="atom silhouette front-default">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette back-default">
        <div class="hit"></div>
      </div>
    </div>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Destroyer (3)</p>

    <div class="ship ship-vertical items-center">
      <div class="atom front-default">
        <div class="hit"></div>
      </div>
      <div class="atom middle">
        <div class="hit"></div>
      </div>
      <div class="atom back-default">
        <div class="hit"></div>
      </div>
    </div>

    <div class="ship ship-vertical items-center">
      <div class="atom silhouette front-default">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette middle">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette back-default">
        <div class="hit"></div>
      </div>
    </div>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Submarine (3)</p>

    <div class="ship ship-vertical items-center">
      <div class="atom front-submarine">
        <div class="hit"></div>
      </div>
      <div class="atom middle">
        <div class="hit"></div>
      </div>
      <div class="atom back-default">
        <div class="hit"></div>
      </div>
    </div>

    <div class="ship ship-vertical items-center">
      <div class="atom silhouette front-submarine">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette middle">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette back-default">
        <div class="hit"></div>
      </div>
    </div>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Battleship (4)</p>

    <div class="ship ship-vertical items-center">
      <div class="atom front-default">
        <div class="hit"></div>
      </div>
      <div class="atom middle">
        <div class="hit"></div>
      </div>
      <div class="atom middle">
        <div class="hit"></div>
      </div>
      <div class="atom back-default">
        <div class="hit"></div>
      </div>
    </div>

    <div class="ship ship-vertical items-center">
      <div class="atom silhouette front-default">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette middle">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette middle">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette back-default">
        <div class="hit"></div>
      </div>
    </div>

    <p class="uppercase font-semibold text-xs my-auto text-gray-0 text-right">Aircraft carrier (5)</p>

    <div class="ship ship-vertical items-center">
      <div class="atom front-aircraft-carrier">
        <div class="hit"></div>
      </div>
      <div class="atom middle">
        <div class="hit"></div>
      </div>
      <div class="atom middle">
        <div class="hit"></div>
      </div>
      <div class="atom middle">
        <div class="hit"></div>
      </div>
      <div class="atom back-aircraft-carrier">
        <div class="hit"></div>
      </div>
    </div>

    <div class="ship ship-vertical items-center">
      <div class="atom silhouette front-aircraft-carrier">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette middle">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette middle">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette middle">
        <div class="hit"></div>
      </div>
      <div class="atom silhouette back-aircraft-carrier">
        <div class="hit"></div>
      </div>
    </div>
  </div>

</div>
